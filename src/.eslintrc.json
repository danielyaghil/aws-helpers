{
    "root": true,
    "extends": ["eslint:recommended", "prettier"],
    "env": {
        "es2021": true,
        "node": true,
        "jest": true
    },
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },

    "rules": {
        "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }]
    }
}
